#!/usr/bin/env bash

echo "Publish static direcotory"

# Getting the path of the project
if [ ! -z "${BASH_ARGV[0]}" ]; then
  __FILE__="${BASH_ARGV[0]}"
else
  __FILE__="${0}"
fi

export SCRIPTS_PATH=`cd \`dirname $(readlink ${__FILE__} || echo ${__FILE__} )\`/..; pwd`

if [ "$1" = "" ]; then
  PORT=3000
else
  PORT="$1"
fi

rvm 1.9.3 do thin --rackup $SCRIPTS_PATH/lib/static.ru --port $PORT start
